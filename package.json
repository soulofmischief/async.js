{
  "name": "@soulofmischief/async.js",
  "version": "5.0.0",
  "description": "An advanced Javascript async library.",
  "author": "soulofmischief <soulofmischief@protonmail.com>",
  "repository": "https://github.com/soulofmischief/async.js",
  "license": "MIT",
  "engines": {
    "node": ">=8.5.0"
  },
  "main": "index",
  "scripts": {
    "build": "npm run clean --scripts-prepend-node-path; for script in {flow,lib}; do npm run build:$script --scripts-prepend-node-path; done",
    "build:dev": "NODE_ENV=development nodemon -w src --exec 'npm run build'",
    "build:flow": "npx flow-copy-source src lib",
    "build:lib": "babel src -d lib",
    "clean": "rimraf lib",
    "lint:flow": "npx flow status",
    "lint:flow:stop": "npx flow stop",
    "publish:patch": "npm run publish:pre && npm version patch && npm run publish:post",
    "publish:minor": "npm run publish:pre && npm version minor && npm run publish:post",
    "publish:major": "npm run publish:pre && npm version major && npm run publish:post",
    "publish:pre": "npm test && npm run build",
    "publish:post": "cp -f package.json lib && cd lib && npm publish --access public",
    "test": "babel-node node_modules/.bin/ospec"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.17",
    "@soulofmischief/array.js": "^0.16.0",
    "@soulofmischief/js-utils": "^0.16.7",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-flow": "^7.13.13",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^4.1.0",
    "flow-bin": "^0.149.0",
    "flow-copy-source": "^2.0.9",
    "nyc": "^15.1.0",
    "ospec": "^4.1.1",
    "rimraf": "^3.0.2"
  }
}
